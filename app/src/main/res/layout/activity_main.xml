<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:gravity="center"
        android:id="@+id/tvUserId"
        android:text="UserId"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:id="@+id/etUserId"
        android:layout_toRightOf="@+id/tvUserId"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_below="@+id/tvUserId"
        android:text="Password"
        android:gravity="center"
        android:id="@+id/tvUserPass"/>
    <EditText
        android:layout_width="150dp"
        android:layout_height="50dp"

        android:id="@+id/etUserPass"
        android:layout_below="@+id/etUserId"
        android:layout_toRightOf="@+id/tvUserPass"/>

    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:id="@+id/btnClick"
        android:text="Login"
        android:layout_below="@+id/tvUserPass"
        android:layout_marginTop="10dp"/>

</RelativeLayout>
